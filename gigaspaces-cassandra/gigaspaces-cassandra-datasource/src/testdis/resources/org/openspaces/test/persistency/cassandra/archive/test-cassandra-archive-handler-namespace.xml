<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:os-core="http://www.openspaces.org/schema/core"
       xmlns:os-archive-cassandra="http://www.openspaces.org/schema/archive-cassandra"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
	                   http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.1.xsd 
	                   http://www.openspaces.org/schema/core http://www.openspaces.org/schema/11.0/core/openspaces-core.xsd
			   http://www.openspaces.org/schema/archive-cassandra http://www.openspaces.org/schema/11.0/archive-cassandra/openspaces-archive-cassandra.xsd">

	<context:annotation-config />
	
	<os-core:space id="space" url="/./space" />
	
	<os-core:local-tx-manager id="transactionManager" space="space"/>
	
	<os-core:giga-space id="gigaSpace" space="space" tx-manager="transactionManager"/>

	<os-archive-cassandra:cassandra-archive-handler id="cassandraArchiveHandler"
		giga-space="gigaSpace"
		hosts="${cassandra.hosts}"
		port="${cassandra.port}"  
		keyspace="${cassandra.keyspace}"
		write-consistency="${cassandra.write-consistency}"
	/>
</beans>
